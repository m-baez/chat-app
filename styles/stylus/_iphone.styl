@import '_variables.styl'

.wrapper__iphone
  position relative
  margin-top: 4em // 64px
  margin-bottom: 10.5em // 168px 
  height: 31.5625em // 505px
  width: 15.4375em // 247px
  background-color: white
  border-radius: 1.5625em// 25px
  box-shadow:0px 12px 20px 0px rgba(0, 0, 0, 0.2);
  &-header
    position relative
    height: 4.125em // 66px
    // width: 227px
    margin: 0.6875em 0.6875em 0 0.6875em // 11px
    background: linear-gradient(90deg, lightViolet 0%, lightMagenta 100%)
    color: white
    border-radius: 0.9375em 0.9375em 0.375em 0.375em // 15px 6px
  &-header:before
    content: ''
    position: absolute
    border-style: solid 
    border-width: 0.625em 4.6875em // 10px 75px
    border-color: white
    right: 2.3125em // 37px
    border-radius: 0 0 0.9375em 0.9375em // 15px
  &-user
    display: flex
    padding: 1.875em 0.625em 0 0.625em // 30px 10px
  &-user img
    width: 1.4375em // 23px
    height: 1.4375em
    border-radius: 50%
    border: 1px solid white
  &-name
    margin-left: 0.3125em // 5px
    display: flex
    flex-direction: column
    justify-content: space-evenly
  &-name p:nth-of-type(1)
    font-size: 0.5625em// 9px
  &-name p:nth-of-type(2)
    font-size: 0.3125em // 5px